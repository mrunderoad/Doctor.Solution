@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models

<div class="jumbotron">
  <h1>Specialtites</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>There are currently no Spcialties listed.</h3>
}
<ul>
  @foreach(Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.SpecialtyName}", "Details", new { id = specialty.SpecialtyId })</li>
  }
</ul>
<hr />
<p>@Html.ActionLink("Add a new Specialty", "Create")</p>